<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_padding_3"
    tools:context=".Activity.SignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Memo App"
            android:gravity="center"
            android:textSize="36sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginTop="@dimen/login_et_margin"
            android:id="@+id/signup_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_signup"
            android:text="@string/sign_up"
            android:textSize="@dimen/login_title_size"
            android:gravity="center"/>

        <EditText
            android:layout_marginTop="@dimen/login_et_margin"
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_title"
            android:hint="Username"
            android:inputType="text"
            android:background="@drawable/edit_text_with_border_radius"/>

        <EditText
            android:layout_marginTop="@dimen/login_et_margin"
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_username"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:background="@drawable/edit_text_with_border_radius"/>

        <EditText
            android:layout_marginTop="@dimen/login_et_margin"
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_email"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:background="@drawable/edit_text_with_border_radius"/>

        <EditText
            android:layout_marginTop="@dimen/login_et_margin"
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_password"
            android:inputType="textPassword"
            android:hint="@string/confirm_password"
            android:background="@drawable/edit_text_with_border_radius"/>

        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_confirm_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_with_border_radius"
            android:text="@string/sign_up" />

        <LinearLayout
            android:layout_marginTop="@dimen/login_et_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_below="@+id/btn_sign_up">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"/>

            <TextView
                android:id="@+id/tv_go_to_login_view"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_underlined"/>
        </LinearLayout>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pb_sign_up"
        style="@android:style/Widget.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progress="25"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:backgroundTint="@color/colorAccent"/>

</FrameLayout>